{% extends 'base.html.twig' %}

{% block title %}Alta de profesional{% endblock %}

{% block encabezado %}
    Alta de profesional
{% endblock %}

{% block main %}


    {{ include('profesionales/_form.html.twig') }}

    <script>

        let fallecido = document.getElementById("profesional_fallecido");
        let fechaFallecido = document.getElementById("profesional_fechaFallecido");
        let usuario = document.getElementById("profesional_usuario");
        

        fechaFallecido.readOnly = true;
        fechaFallecido.disabled = true;
        // usuario.value = usuario;
        // usuario.readOnly = true;
        // usuario.disabled = true;

        fallecido.addEventListener("change", function() {
            if (fallecido.value === "SI") {
                fechaFallecido.readOnly = false;
                fechaFallecido.disabled = false;
            } else {
                fechaFallecido.readOnly = true;
                fechaFallecido.disabled = true;

            }
            });

    
    </script>
    

{% endblock %}
