
{{ form_start(form) }}
<div class="container text-center">
  <div class="row align-items-start">
    
    {# Esto es un formulario generico en dos columnas, se utliza para Show, New y Edit #}

    <style>
      table{
      width: 100%;                   
      }

      span{                   
        font-weight: bold;        
      }

      td{        
