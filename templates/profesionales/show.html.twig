{% extends 'base.html.twig' %}

{% block title %}Consulta{% endblock %}

{% block encabezado %}
    Consulta
{% endblock %}

{% block main %}

    {{ include('profesionales/_form.html.twig', {'button_label': 'Modificar'}) }}
    <a href="{{path('app_profesionales_index')}}"><button class="btn btn-primary">{{ button_label|default('Volver') }}</button></a>


    <script>
        let btn= document.getElementById("btn_form"); 
        btn.style.display ="none";
        var inputs = document.getElementsByTagName("input");
            for (var i = 0; i < inputs.length; i++) {
            inputs[i].readOnly = true;
            inputs[i].disabled = true;
            }

        var selects = document.getElementsByTagName("select");
        for (var i = 0; i < selects.length; i++) {
            selects[i].readOnly = true;
            selects[i].disabled = true;

        }
    </script>

    
{% endblock %}
