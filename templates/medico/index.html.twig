{% extends 'base.html.twig' %}

{% block title %}Medicos{% endblock %}

{% block encabezado %}
    Medicos
{% endblock %}

{% block main %}
    
    <table class="table table-striped table-hover" id="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Dni</th>
                <th>Sexo</th>
                <th>Fecha de Nac.</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medico in medicos %}
            <tr>
                <td>{{ medico.id }}</td>
                <td>{{ medico.Nombre }}</td>
                <td>{{ medico.dni }}</td>
                <td>{{ medico.sexo }}</td>
                <td>{{ medico.fNac |date('d-m-Y')}}</td>
                <td>
                    <a title="Visualizar" href="{{ path('app_medico_show', {'id': medico.id}) }}"> <i class="fa-solid fa-eye"></i></a>                    
                    <a title="Modificar" href="{{ path('app_medico_edit', {'id': medico.id}) }}"><i class="fa-regular fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No se encontraron datos</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
